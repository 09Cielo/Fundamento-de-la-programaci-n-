#include <iostream>
using namespace std;

int main() {
    int cantidad;
    
    cout << "Cuantos numeros vas a ingresar? ";
    cin >> cantidad;
    
    int numeros[cantidad];
    
    // Pedir los números
    for(int i = 0; i < cantidad; i++) {
        cout << "Ingresa el numero " << (i+1) << ": ";
        cin >> numeros[i];
    }
    
    // Encontrar el más pequeño
    int masPequeno = numeros[0];
    
    for(int i = 1; i < cantidad; i++) {
        if(numeros[i] < masPequeno) {
            masPequeno = numeros[i];
        }
    }
    
    cout << "El numero mas pequeno es: " << masPequeno << endl;
    
    return 0;
}
