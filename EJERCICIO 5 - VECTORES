#include <iostream>
using namespace std;

int main() {
    int cantidad;
    
    cout << "Cuantos numeros tiene el vector? ";
    cin >> cantidad;
    
    int vector[cantidad];

    cout << "Ingresa los numeros uno por uno:" << endl;
    for(int i = 0; i < cantidad; i++) {
        cout << "Numero " << (i + 1) << ": ";
        cin >> vector[i];
    }
    
    bool esCapicua = true;
    
  
    for(int i = 0; i < cantidad/2; i++) {
        if(vector[i] != vector[cantidad - 1 - i]) {
            esCapicua = false;
            break;
        }
    }
    

    cout << "\nVector ingresado: ";
    for(int i = 0; i < cantidad; i++) {
        cout << vector[i] << " ";
    }
    
    if(esCapicua) {
        cout << "\nÂ¡ES CAPICUA!" << endl;
    } else {
        cout << "\nNO es capicua" << endl;
    }
    
    return 0;
}
